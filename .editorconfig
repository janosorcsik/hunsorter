root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single

[*.md]
indent_style = space
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2
